{# Modern Header with Orange-Blue Theme #}
<header class="store-header bg-white dark:bg-gray-900 shadow-sm border-b border-gray-200 dark:border-gray-700 transition-colors duration-300">
    
    {# Top Navigation Bar #}
    <div class="top-navbar bg-primary-50 dark:bg-gray-800 border-b border-primary-100 dark:border-gray-700">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-10 text-sm">
                
                {# Left side - Contact Info #}
                <div class="flex items-center space-x-4 rtl:space-x-reverse">
                    <div class="flex items-center text-primary-600 dark:text-primary-400">
                        <i class="sicon-location icon-sm mr-2"></i>
                        <span class="hidden sm:inline">الرياض، المملكة العربية السعودية</span>
                    </div>
                    <div class="flex items-center text-primary-600 dark:text-primary-400">
                        <i class="sicon-phone icon-sm mr-2"></i>
                        <span class="hidden sm:inline">+966 50 123 4567</span>
                    </div>
                </div>
                
                {# Right side - User Menu & Language #}
                <div class="flex items-center space-x-4 rtl:space-x-reverse">
                    <div class="flex items-center text-primary-600 dark:text-primary-400">
                        <i class="sicon-user-circle icon-base mr-2"></i>
                        <span class="hidden sm:inline">مرحباً بك</span>
                    </div>
                    
                    {# Dark Mode Toggle #}
                    <button id="dark-mode-toggle" 
                            class="p-2 rounded-full bg-white dark:bg-gray-700 shadow-sm hover:shadow-md transition-all duration-200 text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300">
                        <i class="sicon-moon icon-base" style="display: block;"></i>
                        <i class="sicon-sun icon-base" style="display: none;"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    {# Main Navigation Container #}
    <div class="main-nav-container bg-white dark:bg-gray-900">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16 lg:h-20">
                
                {# Logo/Brand #}
                <div class="navbar-brand flex-shrink-0">
                    <a href="{{ store.url }}" class="flex items-center">
                        <img src="{{ store.logo }}" alt="{{ store.name }}" class="h-8 lg:h-10 w-auto">
                    </a>
                </div>
                
                {# Desktop Navigation #}
                <nav class="hidden lg:flex items-center space-x-8 rtl:space-x-reverse">
                    <a href="{{ store.url }}" class="nav-link text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">
                        الرئيسية
                    </a>
                    <a href="{{ store.url }}/products" class="nav-link text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">
                        المنتجات
                    </a>
                    <a href="{{ store.url }}/categories" class="nav-link text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">
                        الفئات
                    </a>
                    <a href="{{ store.url }}/about" class="nav-link text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">
                        من نحن
                    </a>
                    <a href="{{ store.url }}/contact" class="nav-link text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200">
                        اتصل بنا
                    </a>
                </nav>
                
                {# Right side - Search, Cart, Menu #}
                <div class="flex items-center space-x-4 rtl:space-x-reverse">
                    
                    {# Search Bar #}
                    <div class="hidden md:block flex-1 max-w-md mx-4">
                        <salla-search 
                            class="relative"
                            placeholder="ابحث عن المنتجات..."
                            class="w-full">
                        </salla-search>
                    </div>
                    
                    {# Cart Icon #}
                    <a href="{{ store.url }}/cart" 
                       class="header-btn relative p-2 rounded-full bg-primary-50 dark:bg-gray-800 text-primary-600 dark:text-primary-400 hover:bg-primary-100 dark:hover:bg-gray-700 transition-colors duration-200">
                        <i class="sicon-cart icon-lg"></i>
                        <span class="absolute -top-1 -right-1 bg-primary-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">
                            {{ cart.count }}
                        </span>
                    </a>
                    
                    {# Mobile Menu Button #}
                    <button class="lg:hidden header-btn p-2 rounded-full bg-primary-50 dark:bg-gray-800 text-primary-600 dark:text-primary-400 hover:bg-primary-100 dark:hover:bg-gray-700 transition-colors duration-200"
                            onclick="document.getElementById('mobile-menu').classList.toggle('hidden')">
                        <i class="sicon-menu icon-lg"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    {# Mobile Search Bar #}
    <div class="lg:hidden bg-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 p-4">
        <salla-search 
            class="w-full"
            placeholder="ابحث عن المنتجات..."
            class="w-full">
        </salla-search>
    </div>
    
    {# Mobile Menu #}
    <div id="mobile-menu" class="lg:hidden hidden bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700">
        <nav class="px-4 py-2 space-y-1">
            <a href="{{ store.url }}" class="mobile-nav-link block px-3 py-2 rounded-md text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-primary-50 dark:hover:bg-gray-800 transition-colors duration-200">
                الرئيسية
            </a>
            <a href="{{ store.url }}/products" class="mobile-nav-link block px-3 py-2 rounded-md text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-primary-50 dark:hover:bg-gray-800 transition-colors duration-200">
                المنتجات
            </a>
            <a href="{{ store.url }}/categories" class="mobile-nav-link block px-3 py-2 rounded-md text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-primary-50 dark:hover:bg-gray-800 transition-colors duration-200">
                الفئات
            </a>
            <a href="{{ store.url }}/about" class="mobile-nav-link block px-3 py-2 rounded-md text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-primary-50 dark:hover:bg-gray-800 transition-colors duration-200">
                من نحن
            </a>
            <a href="{{ store.url }}/contact" class="mobile-nav-link block px-3 py-2 rounded-md text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-primary-50 dark:hover:bg-gray-800 transition-colors duration-200">
                اتصل بنا
            </a>
        </nav>
    </div>
</header>
