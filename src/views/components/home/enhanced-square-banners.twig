{#
| Variable                        | Type     | Description                                                                  |
|---------------------------------|----------|------------------------------------------------------------------------------|
| component                       | object   | Contains merchant settings for fields from twilight.json `component` section |
| component.banners               | object[] | list of banners                                                              |
| component.banners[].image       | string   |                                                                              |
| component.banners[].url         | string   |                                                                              |
| component.banners[].title       | string   |                                                                              |
| component.banners[].description | string   |                                                                              |
#}

<div class="enhanced-square-banners">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for banner in component.banners %}
                <div class="banner-card group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-all duration-500 transform hover:-translate-y-2">
                    <a href="{{ banner.url }}" class="block relative">
                        <!-- Background Image with Overlay -->
                        <div class="aspect-4-3 relative bg-gradient-to-br from-primary-500 to-secondary-500 overflow-hidden">
                            {% if banner.image %}
                                <img src="{{ banner.image }}" 
                                     alt="{{ banner.title }}" 
                                     class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                     loading="lazy">
                            {% endif %}
                            
                            <!-- Gradient Overlay -->
                            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent"></div>
                            
                            <!-- Content -->
                            <div class="absolute inset-0 flex flex-col justify-end p-6 text-white">
                                {% if banner.title %}
                                    <h3 class="text-xl font-bold mb-2 group-hover:text-accent-400 transition-colors duration-300">
                                        {{ banner.title }}
                                    </h3>
                                {% endif %}
                                
                                {% if banner.description %}
                                    <p class="text-sm opacity-90 line-clamp-2 group-hover:opacity-100 transition-opacity duration-300">
                                        {{ banner.description }}
                                    </p>
                                {% endif %}
                                
                                <!-- Call to Action -->
                                <div class="mt-4 flex items-center text-accent-400 font-medium text-sm">
                                    <span class="group-hover:translate-x-1 transition-transform duration-300">
                                        اكتشف المزيد
                                    </span>
                                    <i class="sicon-arrow-left mr-2 group-hover:translate-x-1 transition-transform duration-300"></i>
                                </div>
                            </div>
                            
                            <!-- Hover Effect -->
                            <div class="absolute inset-0 bg-gradient-to-r from-primary-600/20 to-secondary-600/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

<style>
@layer utilities {
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
}
</style>